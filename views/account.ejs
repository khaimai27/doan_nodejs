<!DOCTYPE html>
<html>

<head>
    <style>
        .create-user {
            padding: 15px;
            font-size: 18px;
            text-align: center;
        }

        .create-user label {
            display: block;
        }

        .create-user button:hover {
            padding: 10px;
            background-color: coral;
            cursor: pointer;


        }

        header {
            text-align: right;
            padding: 8px;
        }

        header button {
            font-size: 18px;
            margin-left: 10px;
        }

        header button:hover {
            background-color: coral;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th,
        td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        tr:hover {
            background-color: coral;

        }
    </style>
</head>

<body>
    <h2>Danh sách tài khoản</h2>

    <table>
        <tr>
            <th>Mã người dùng</th>
            <th>Tên</th>
            <th>Email</th>
            <th>Password</th>
            <th>Quyền</th>
            <th>Hành động</th>
        </tr>
        <% accounts.forEach(function(account) { %>
            <tr>
                <td>
                    <%= account.id_nguoiDung %>
                </td>
                <td>
                    <%= account.tennguoiDung %>
                </td>
                <td>
                    <%= account.email %>
                </td>
                <td>
                    <%= account.password %>
                </td>
                <td>
                    <%= account.quyen %>
                </td>
                <td>
                    <a href="/api/taikhoan/gettaikhoan/<%=account.id_nguoiDung%>">Thông tin chi tiết</a>
                    <button class="deleteButton">Xóa</button>
                </td>
            </tr>
            <% }); %>
    </table>
    <div class="create-user">
        <form action="/api/taikhoan/create-user" method="post">
            <div><strong>Thêm mới tài khoản</strong></div>
            <div>
                <label>Tên:</label>
                <input type="text" name="tennguoiDung" />
            </div>
            <div>
                <label>Email</label>
                <input type="email" name="email" />
            </div>
            <div>
                <label>Password</label>
                <input type="text" name="password" />
            </div>
            <div>
                <label>Quyền</label>
                <input type="text" name="quyen" />
            </div>
            <button class="addUser">Thêm người dùng</button>
        </form>
    </div>
</body>

</html>